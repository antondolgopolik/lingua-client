<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootVBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.bsuir.linguaclient.controller.component.WordPanelController">
    <children>
      <HBox fx:id="topBarHBox" alignment="CENTER" prefHeight="75.0" spacing="15.0">
         <children>
                <Button fx:id="addToDictionaryButton" mnemonicParsing="false" text="Add to dictionary" />
            <ChoiceBox fx:id="dictionaryChoiceBox" prefWidth="150.0" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
            <content>
                <TreeView fx:id="wordTreeView">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </TreeView>
            </content>
        </ScrollPane>
    </children>
</VBox>
