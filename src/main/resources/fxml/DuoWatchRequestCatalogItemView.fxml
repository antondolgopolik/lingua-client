<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.bsuir.linguaclient.controller.component.DuoWatchRequestCatalogItemController">
    <children>
        <StackPane fx:id="posterStackPane" prefHeight="400.0" prefWidth="250.0">
            <children>
                <ImageView fx:id="posterImageView" fitHeight="300.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER" />
            </children>
        </StackPane>
        <VBox prefWidth="300.0" spacing="15.0">
            <HBox.margin>
                <Insets left="15.0" />
            </HBox.margin>
            <children>
                <Label fx:id="durationLabel" text="Duration: " />
            <Separator prefWidth="200.0" />
                <Label fx:id="viewsLabel" text="Views: " />
            <Separator prefWidth="200.0" />
                <Label fx:id="genresLabel" text="Genres: " wrapText="true" />
            <Separator prefWidth="200.0" />
            <Label fx:id="videoContentLangLabel" text="Video content language: " />
            <Label fx:id="secondLangLabel" text="Second language:" />
            <Separator prefWidth="200.0" />
            <Label fx:id="createdLabel" text="Created: " />
            <Label fx:id="lastUpdateLabel" text="Last update:" />
            </children>
            <padding>
                <Insets bottom="15.0" top="15.0" />
            </padding>
        </VBox>
        <Button fx:id="acceptButton" mnemonicParsing="false" prefWidth="800.0" text="Accept Duo Watch Request">
            <font>
                <Font size="18.0" />
            </font>
            <HBox.margin>
                <Insets left="15.0" />
            </HBox.margin>
        </Button>
    </children>
</HBox>
